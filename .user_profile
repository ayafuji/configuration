# alias
grc_ver=1.11
if which grc >/dev/null 2>&1 ; then
  :
else
    cd /home/$u/configuration/
    wget http://kassiopeia.juls.savba.sk/~garabik/software/grc/grc_$grc_ver.orig.tar.gz
    tar zxvf /home/$u/configuration/grc_$grc_ver.orig.tar.gz
    cd /home/$u/configuration/grc-$grc_ver
    sudo sh /home/$u/configuration/grc-$grc_ver/install.sh
fi

alias mount='grc mount'
alias ifconfig='grc ifconfig'
alias dig='grc dig'
alias ldap='grc ldap'
alias netstat='grc netstat'
alias ping='grc ping'
alias ps='grc ps'
alias traceroute='grc traceroute'
alias gcc='grc gcc'

# Variables
u="$USER"

# Set Environment Variables
export EDITOR='emacs -nw'

# Change Color Scheme in terminal
PS1="\[\e[01;33m\]\u\[\e[0m\]\[\e[00;37m\]@\[\e[0m\]\[\e[01;36m\]\h\[\e[0m\]\[\e[00;37m\] \[\e[0m\]\[\e[01;35m\]\W\[\e[0m\]\[\e[01;37m\] > \[\e[0m\]"
export PS1='\[\033[32m\]\u@\h\[\033[00m\]:\[\033[34m\]\W\[\033[31m\]$(__git_ps1)\[\033[00m\]\$ '

# Ros
source /opt/ros/kinetic/setup.bash
source /home/$u/catkin_ws/devel/setup.bash
export ROS_HOSTNAME=localhost
export ROS_MASTER_URI=http://localhost:11311

# Aliases
alias 'gfind'='find ./ -type f -print |xargs grep --color=always -nrC1 '
alias 'catkin_make'='cd /home/$u/catkin_ws/ && catkin_make'
alias 'grep'="grep --color=auto --binary-files=without-match "
alias 'makerun'="make && make RunRelease"
alias 'pbcopy'='xsel --clipboard --input'
alias emacs="emacs -nw"

# git
source /home/$u/configuration/git-completion.bash
source /home/$u/configuration/git-prompt.sh
